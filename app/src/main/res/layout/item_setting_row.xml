<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="16dp"
    android:background="?attr/selectableItemBackgroundBorderless">

    <!-- Icon Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iconWrap"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:backgroundTint="@color/aether_bg_surface"
        app:cardCornerRadius="8dp"
        app:strokeWidth="0dp"
        app:strokeColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/neo_chip"
            android:backgroundTint="@color/aether_night_start">

            <ImageView
                android:id="@+id/rowIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_wind"
                app:tint="@color/aether_text_secondary" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Title -->
    <TextView
        android:id="@+id/rowTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="16sp"
        android:textColor="@color/aether_text_primary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toEndOf="@id/iconWrap"
        app:layout_constraintEnd_toStartOf="@id/arrowIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rowSubtitle"
        app:layout_constraintVertical_chainStyle="packed"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/rowSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subtitle"
        android:textSize="13sp"
        android:textColor="@color/aether_text_secondary"
        app:layout_constraintStart_toStartOf="@id/rowTitle"
        app:layout_constraintEnd_toStartOf="@id/arrowIcon"
        app:layout_constraintTop_toBottomOf="@id/rowTitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Arrow -->
    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/aether_text_secondary" />

</androidx.constraintlayout.widget.ConstraintLayout>
