<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLocations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@drawable/bg_aether_grid"
    tools:context=".ui.LocationsFragment">

    <!-- Scroll content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="32dp"
            android:paddingBottom="120dp">

            <!-- Title -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locations"
                android:textColor="@color/aether_text_primary"
                android:textSize="32sp"
                android:fontFamily="sans-serif-black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Add Btn -->
            <ImageView
                android:id="@+id/btnAddLocation"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:background="@drawable/gradient_primary_round"
                android:src="@drawable/ic_plus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtTitle"
                app:layout_constraintBottom_toBottomOf="@id/txtTitle"
                app:tint="@color/white" />
            <!-- Search Bar -->
            <!-- Search Bar -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSearch"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_search_bar"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="false"
                app:strokeWidth="0dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_search_bar"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/aether_text_secondary" />

                    <EditText
                        android:id="@+id/edtSearch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:background="@android:color/transparent"
                        android:hint="Search locations..."
                        android:textColor="@color/aether_text_primary"
                        android:textColorHint="@color/aether_text_tertiary"
                        android:singleLine="true"
                        android:padding="0dp"
                        android:imeOptions="actionSearch" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Filters -->
            <LinearLayout
                android:id="@+id/filterRow"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/cardSearch"
                app:layout_constraintStart_toStartOf="parent">

                <!-- My Location -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pillMyLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="0dp"
                    android:paddingStart="14dp"
                    android:background="@android:color/transparent"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    android:paddingEnd="14dp"
                    android:layout_marginEnd="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/neo_card"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/aether_purple_start" />

                        <TextView
                            android:id="@+id/txtMyLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="My Location"
                            android:textSize="13sp"
                            android:textColor="@color/aether_text_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Sort Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pillSort"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"

                    app:strokeWidth="0dp"
                    android:gravity="center">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:background="@drawable/neo_chip"
                       >
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/ic_layers"
                           app:tint="@color/aether_text_secondary" />
                   </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <!-- LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLocations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/filterRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_location_card"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>
