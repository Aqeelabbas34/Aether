<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="8dp">

    <!-- CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:radius="22dp"
        android:clipToOutline="true"
        app:strokeWidth="0dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- BACKGROUND IMAGE -->
            <ImageView
                android:id="@+id/imgBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- FULL COVERAGE GRADIENT (ENTIRE BOTTOM HALF) -->
            <View
                android:id="@+id/bottomOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/hero_gradient_overlay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!-- Full match constraints so gradient covers entire image; gradient file already fades only bottom -->

            <!-- TOP CONTENT -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- COUNTRY PILL -->
                <LinearLayout
                    android:id="@+id/pillCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/pill_bg_glass"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/aether_soft_lavender" />

                    <TextView
                        android:id="@+id/txtCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="USA"
                        android:textColor="@color/aether_text_primary"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- FAVORITE STAR -->
                <ImageView
                    android:id="@+id/btnFavorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:background="@drawable/gradient_primary_round"
                    android:src="@drawable/ic_star_filled"
                    app:tint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pillCountry" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- CITY NAME -->
            <TextView
                android:id="@+id/txtCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="San Francisco"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/aether_text_primary"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/weatherRow" />

            <!-- WEATHER ROW -->
            <LinearLayout
                android:id="@+id/weatherRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingBottom="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/icWeather"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_sun"
                    app:tint="@color/aether_amber_glow" />

                <TextView
                    android:id="@+id/txtCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Sunny"
                    android:textColor="@color/aether_text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="24Â°C"
                    android:textColor="@color/aether_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
