<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="400dp"
    android:height="72dp"
    android:viewportWidth="400"
    android:viewportHeight="72">

    <!-- ==========================================
         1. BASE CAPSULE â€” 100% OPAQUE GRADIENT
         (No alpha, no transparency)
         ========================================== -->
    <path
        android:pathData="M36,0 H364
                           A36,36 0 0 1 400,36
                           A36,36 0 0 1 364,72
                           H36
                           A36,36 0 0 1 0,36
                           A36,36 0 0 1 36,0 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#3F29F8"
            android:centerColor="#161D33"
            android:endColor="#3B82F6"
            />
        </aapt:attr>
    </path>

    <!-- ==========================================
         2. REMOVE ALL TRANSLUCENT FROST LAYERS
         (This layer is now fully transparent)
         ========================================== -->
    <path
        android:pathData="M36,0 H364
                           A36,36 0 0 1 400,36
                           A36,36 0 0 1 364,72
                           H36
                           A36,36 0 0 1 0,36
                           A36,36 0 0 1 36,0 Z"
        android:fillColor="#00FFFFFF" /> <!-- No opacity -->

    <!-- ==========================================
         3. REMOVE HIGHLIGHT (OR KEEP OPAQUE IF YOU WANT)
         Here kept fully transparent for a clean solid capsule
         ========================================== -->
    <path
        android:pathData="M36,0 H364
                           A36,36 0 0 1 400,36
                           A36,36 0 0 1 364,72
                           H36
                           A36,36 0 0 1 0,36
                           A36,36 0 0 1 36,0 Z"
        android:fillColor="#00FFFFFF" /> <!-- Highlight disabled -->

</vector>
