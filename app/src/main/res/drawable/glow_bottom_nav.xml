<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient
                android:startColor="@color/aether_purple_start"
                android:endColor="@color/aether_blue_end"
                android:angle="0" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Transparent middle (so card shows) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>
